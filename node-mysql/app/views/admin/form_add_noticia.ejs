<%- contentFor('body') %>
<h1>Adicionar notícia</h1>

<form action="/noticias/salvar" method="post">
		<label for="">título da notícia</label><br>
		<input name="titulo" id="titulo" type="text" placeholder="Insira o título da notícia"><br>
		<label for="">notícia</label><br>
		<textarea name="noticia" id="noticia" cols="30" rows="10" placeholder="Insira o conteúdo da notícia"></textarea><br>
		<input type="submit" value="enviar">
</form>